{
  "id": "marathon-consul",
  "args": ["--registry=http://consul.service.consul:8500 --marathon-location=marathon.service.consul:8080"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{marathon_consul_image}}",
      "network": "BRIDGE",
      "portMappings": [{"containerPort": 4000, "hostPort": 0, "protocol": "tcp"}]
    }
  },
  "instances": 1,
  "cpus": 0.1,
  "mem": 128
}

